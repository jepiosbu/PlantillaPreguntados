<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/strokel"
    tools:context=".AddQuestion">

    <TextView
        android:id="@+id/title"
        android:layout_width="246dp"
        android:layout_height="77dp"
        android:layout_marginTop="58dp"
        android:background="@drawable/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pregunta"
        android:layout_width="294dp"
        android:layout_height="61dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/boxquestion"
        android:ems="10"
        android:inputType="text"
        android:hint="Pregunta"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <EditText
        android:id="@+id/respuesta"
        android:hint="Respuesta"
        android:layout_width="294dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/boxquestion"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pregunta" />

    <EditText
        android:id="@+id/opcion1"
        android:hint="A"
        android:layout_width="294dp"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/boxquestion"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/respuesta" />

    <EditText
        android:id="@+id/opcion2"
        android:layout_width="294dp"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/boxquestion"
        android:ems="10"
        android:hint="B"
        android:inputType="text"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opcion1" />

    <EditText
        android:id="@+id/opcion3"
        android:layout_width="294dp"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/boxquestion"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:hint="C"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opcion2" />

    <EditText
        android:id="@+id/opcion4"
        android:layout_width="294dp"
        android:layout_height="61dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/boxquestion"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:hint="D"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opcion3" />

    <Button
        android:id="@+id/button"
        android:layout_width="183dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/azul"
        android:layout_height="54dp"
        android:layout_marginTop="12dp"
        android:text="Guadar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opcion4" />
</androidx.constraintlayout.widget.ConstraintLayout>